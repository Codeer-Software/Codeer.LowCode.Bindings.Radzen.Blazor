@inherits RadzenFieldComponentBase<SubmitButtonField, RadzenSubmitButtonFieldDesign>

<RadzenButton Icon="@Field.Design.Icon" Disabled="IsDisabled" Click="@RaiseOnClick" FullWidth="true"
              Variant="RadzenDesign.Variant.ToVariant()" ButtonStyle="RadzenDesign.Color.ToButtonStyle()" class="d-block">
  @Label
</RadzenButton>

@code {
  private string? Label => Field.Design.Text;
  private bool IsDisabled => Field.IsEnabled == false || IsViewMode;
  private bool IsViewMode => Field.IsViewOnly;

  private Task RaiseOnClick() => Field.InvokeOnClick();

}